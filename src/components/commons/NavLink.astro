---
import type { Generation } from '../../utils/interfaces/types';

interface Props {
    isActive?: boolean;
    gen: Generation;
    index: number;
    length: number;
}
const { gen, index, length, isActive = false } = Astro.props;

let baseClass = "relative inline-block align-middle text-[var(--color-dark)] text-[1rem] md:text-[2rem] p-3 font-bold overflow-hidden transition-all navigation-link";
baseClass = isActive ? baseClass + " active" : baseClass;
if(index === 0)
    baseClass += " rounded-l-[1rem]";
if(index === length)
    baseClass += " rounded-r-[1rem]";
---

<li>
    <a class={baseClass} href={gen.href} aria-label={`Vai alla Gen ${gen.name}`}>
        {gen.name}
    </a>
</li>