---
interface Props {
    id: number;
    name: string;
}
const { id, name } = Astro.props;
---
<!-- POKEDEX NUMBER -->
<div class="p-1 flex flex-col" aria-label={`Numero Pokédex: ${id}`} aria-label="Nome e numero Pokédex">
    <!-- NAME -->
    <h2 class="font-bold tracking-wide text-2xl text-amber-50">
        {name}
    </h2>
    <span class="font-bold text-amber-50 text-2xl">#{id}</span>
</div>