---
interface Props {
    id: number;
    name: string;
}
const { id, name } = Astro.props;
---

<!-- POKEDEX NUMBER -->
<div class="p-1 flex flex-col max-w-2/3 text-wrap" aria-label={`Numero Pokédex: ${id}`} aria-label="Nome e numero Pokédex">
    <!-- NAME -->
    <span class="font-bold text-amber-50 text-2xl px-3">#{id}</span>
    <div class="bg-gray-200 rounded-full py-2 px-3">
        <h2 class="font-bold tracking-wide text-2xl">
            {name}
        </h2>
    </div>
</div>
