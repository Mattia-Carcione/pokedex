---
import Skeleton from './Skeleton.astro';

interface Props {
    imgSrc: string;
    name: string;
}

const { imgSrc, name } = Astro.props;
---
<!-- SPRITE -->
<div class="flex justify-center-safe items-center w-[250px] h-[250px] bg-amber-50/50 rounded-full" aria-label="Sprite del PokÃ©mon">
    <Skeleton />
    <img class="z-10 object-cover h-[250px] opacity-0 transition-opacity duration-300" src={imgSrc} alt={`Sprite ufficiale di ${name}`} loading="lazy" onload="this.previousElementSibling.style.display='none'; this.style.opacity='1';"/>
</div>