---
import type { Generation } from '../../utils/interfaces/types'
import NavLink from './NavLink.astro';

interface Props {
    generations: Generation[];
    isHome?: boolean;
}
const { generations, isHome = false } = Astro.props;
const params = Astro.params;
---

<nav id="main-nav" class="rounded-[1rem] table mx-auto bg-[#FFF] mt-4 [box-shadow:0_0_15px_0_rgba(0,0,0,0.2)]" aria-label="Navigazione generazioni PokÃ©mon">
    <ul class="flex flex-wrap sticky top-0 z-[999]">
        {generations.map((g: Generation, x: number) => (
            <NavLink gen={g} isActive={g.id.toString() === params.id || (isHome && x === 0)} index={x} length={generations.length - 1} />
        ))}
    </ul>
</nav>